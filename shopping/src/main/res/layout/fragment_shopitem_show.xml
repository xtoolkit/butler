<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.shopitem.show.ShopItemShowFragment">

    <data>

        <variable
            name="isEdit"
            type="boolean" />

        <variable
            name="shoplist"
            type="io.github.xtoolkit.butler.shopping.core.domain.ShopList" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/menu"
            android:layout_width="24dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_radoo_icon_menu"
            app:layout_constraintBottom_toBottomOf="@id/page_title"
            app:layout_constraintDimensionRatio="1, 1"
            app:layout_constraintEnd_toStartOf="@id/page_title"
            app:layout_constraintTop_toTopOf="@id/page_title"
            app:tint="@color/text_style_1" />

        <TextView
            android:id="@+id/page_title"
            style="@style/PanelHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="26dp"
            android:maxLines="1"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="@{shoplist.name, default=Title}"
            app:layout_constraintBottom_toTopOf="@id/switch_layout"
            app:layout_constraintEnd_toStartOf="@id/more"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/more"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_radoo_icon_btn"
            app:layout_constraintBottom_toBottomOf="@id/page_title"
            app:layout_constraintDimensionRatio="1, 1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/page_title"
            app:tint="#E4E8FF" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="8dp"
            android:rotation="90"
            android:src="@drawable/ic_radoo_icon_more"
            app:layout_constraintBottom_toBottomOf="@id/more"
            app:layout_constraintEnd_toEndOf="@id/more"
            app:layout_constraintStart_toStartOf="@id/more"
            app:layout_constraintTop_toTopOf="@id/more"
            app:tint="#526DFE" />

        <include
            android:id="@+id/switch_layout"
            layout="@layout/layout_switch"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginHorizontal="16dp"
            android:visibility="@{isEdit ? View.INVISIBLE : View.VISIBLE}"
            app:btnFirst="@{@string/items}"
            app:btnSecond="@{@string/done}"
            app:layout_constraintBottom_toTopOf="@id/list"
            app:layout_constraintTop_toBottomOf="@id/page_title" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/insert_box"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="@{isEdit ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/switch_layout"
            app:layout_constraintEnd_toEndOf="@id/switch_layout"
            app:layout_constraintStart_toStartOf="@id/switch_layout"
            app:layout_constraintTop_toTopOf="@id/switch_layout">

            <EditText
                android:id="@+id/input"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:autofillHints="name"
                android:background="@drawable/circle"
                android:backgroundTint="@color/panel_2"
                android:hint="@string/type_here_too_add_an_item"
                android:inputType="textShortMessage"
                android:paddingHorizontal="16dp"
                android:singleLine="true"
                android:textColor="@color/text"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/submit"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/submit"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/circle"
                app:layout_constraintBottom_toBottomOf="@id/input"
                app:layout_constraintDimensionRatio="1, 1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/input"
                app:tint="#526DFE" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="18dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/ic_radoo_icon_send"
                app:layout_constraintBottom_toBottomOf="@id/submit"
                app:layout_constraintEnd_toEndOf="@id/submit"
                app:layout_constraintStart_toStartOf="@id/submit"
                app:layout_constraintTop_toTopOf="@id/submit"
                app:tint="#FFFFFF" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingHorizontal="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/switch_layout"
            tools:listitem="@layout/item_shopitem" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/green"
            android:src="@{isEdit ? @drawable/ic_round_done_24 : @drawable/ic_round_edit_24}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:tint="#ffffff" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>