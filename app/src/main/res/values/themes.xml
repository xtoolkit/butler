<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Shopping" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/ultramarine</item>
        <item name="colorPrimaryVariant">@color/text_style_1</item>
        <item name="colorOnPrimary">@color/panel</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/root</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CenterPanel">
        <item name="android:background">@drawable/layout_panel</item>
        <item name="android:backgroundTint">@color/panel</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">@dimen/overlapping_panels_scroll_slop</item>
    </style>

    <style name="CenterPanelBackground">
        <item name="android:background">@color/panel</item>
    </style>

    <style name="StartPanel" parent="CenterPanel">
        <item name="android:layout_marginStart">@dimen/overlapping_panels_scroll_slop</item>
    </style>

    <style name="EndPanel" parent="CenterPanel">
        <item name="android:layout_marginEnd">@dimen/overlapping_panels_scroll_slop</item>
    </style>

    <style name="PanelHeader">
        <item name="android:textColor">@color/text_style_1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ThemeSwitchIcon">
        <item name="android:src">@drawable/ic_radoo_icon_moon</item>
    </style>

    <style name="ThemeSwitchText">
        <item name="android:text">@string/dark</item>
    </style>

    <style name="PanelBottomBox">
        <item name="android:background">@drawable/layout_panel_bottom</item>
        <item name="android:backgroundTint">@color/panel_alt_2</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="PanelBottomBoxButton">
        <item name="android:src">@drawable/ic_radoo_full_button</item>
        <item name="layout_constraintDimensionRatio">1, 6.3</item>
        <item name="tint">@color/button_style_1</item>
    </style>

    <style name="PanelBottomBoxText">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_style_2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PanelBottomBoxIcon">
        <item name="tint">@color/text_style_2</item>
    </style>

    <style name="FullSwitchLayoutItem">
        <item name="android:textSize">16sp</item>
    </style>
</resources>