<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Shopping" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.Shopping.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RootPanel">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="CenterPanel">
        <item name="android:background">@drawable/layout_panel</item>
        <item name="android:backgroundTint">#F3F5F9</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">@dimen/overlapping_panels_scroll_slop</item>
    </style>

    <style name="CenterPanelBackground">
        <item name="android:background">#F3F5F9</item>
    </style>

    <style name="StartPanel" parent="CenterPanel">
        <item name="android:layout_marginStart">@dimen/overlapping_panels_scroll_slop</item>
    </style>

    <style name="EndPanel" parent="CenterPanel">
        <item name="android:layout_marginEnd">@dimen/overlapping_panels_scroll_slop</item>
    </style>

    <style name="PanelHeader">
        <item name="android:textColor">#262545</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ThemeSwitch">
        <item name="android:background">@drawable/layout_theme_switch_light</item>
    </style>

    <style name="ThemeSwitchIcon">
        <item name="android:src">@drawable/ic_radoo_icon_moon</item>
    </style>

    <style name="ThemeSwitchText">
        <item name="android:text">@string/dark</item>
        <item name="android:textColor">#262545</item>
    </style>

    <style name="PanelBottomBox">
        <item name="android:background">@drawable/layout_panel_bottom</item>
        <item name="android:backgroundTint">#80E8E8E8</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="PanelBottomBoxButton">
        <item name="android:src">@drawable/ic_radoo_full_button</item>
        <item name="layout_constraintDimensionRatio">1, 6.3</item>
        <item name="tint">#526DFE</item>
    </style>

    <style name="PanelBottomBoxText">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#E4E8FF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PanelShopListItemBorder">
        <item name="android:background">#EEEEEE</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="PanelShopListItemShape">
        <item name="android:src">@drawable/ic_radoo_item_selected</item>
        <item name="layout_constraintDimensionRatio">1,4.5</item>
        <item name="tint">#DCE1E6</item>
    </style>

    <style name="PanelShopListItemShapeStart">
        <item name="android:background">#DCE1E6</item>
    </style>

    <style name="PanelShopListItemTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="PanelShopListItemSub">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="PanelShopListItemMore">
        <item name="android:src">@drawable/ic_radoo_icon_more</item>
        <item name="layout_constraintDimensionRatio">1, 1</item>
        <item name="tint">#000000</item>
    </style>

    <style name="PanelMenu">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:src">@drawable/ic_radoo_icon_menu</item>
        <item name="layout_constraintDimensionRatio">1, 1</item>
        <item name="tint">#262545</item>
    </style>

    <style name="FullSwitchLayout">
        <item name="android:background">@drawable/switch_layout</item>
        <item name="android:backgroundTint">#FFFFFF</item>
    </style>

    <style name="FullSwitchLayoutItem">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ShopItem">
        <item name="android:backgroundTint">#FFFFFF</item>
    </style>

    <style name="ShopItemText">
        <item name="android:textColor">#262545</item>
    </style>

    <style name="ShopItemHeader">
        <item name="android:textColor">#262545</item>
    </style>

    <style name="ShopItemInsertBox">
        <item name="android:background">#DCE1E6</item>
    </style>

    <style name="ShopItemInsertInput">
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ShopItemInsertHR">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="ShopItemInsertTitle">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ShopItemInsertAdd">
        <item name="tint">#000000</item>
    </style>

    <style name="ShopItemInsertRemove">
        <item name="android:background">#000000</item>
    </style>
</resources>